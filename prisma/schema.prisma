generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

// MARK: HOME
model Home {
  id                  String   @id @default(uuid())
  profile             String   @unique
  hero_image          String   @default("https://picsum.photos/1280/350")
  featured_product    Product? @relation(fields: [featured_product_id], references: [id], onDelete: SetNull)
  featured_product_id String?  @unique
  featured_image      String?
  featured_features   Json[]
  quote               Json?
  partners            String[]
}

// MARK: FAQ
model Faq {
  id String  @id @default(uuid())
  q  String
  a  String?
}

// MARK: PRODUCTS
model Product {
  id          String          @id @default(uuid())
  model       String          @unique
  title       String
  price       Float?
  description String?
  images      String[]        @default(["https://picsum.photos/100"])
  features    Json?
  specs       Json?
  Category    Category?       @relation(fields: [category_id], references: [id], onDelete: SetNull)
  category_id String?
  media       ProductMedia[]
  reviews     ProductReview[]
  Home        Home?

  @@index(model)
}

model Category {
  id          String    @id @default(uuid())
  title       String    @unique
  banner      String?
  title_en    String?
  description String?
  products    Product[]
}

model ProductMedia {
  id         String  @id @default(uuid())
  title      String
  subtitle   String?
  media_url  String  @default("https://picsum.photos/100")
  style      Style   @default(image_bottom)
  Product    Product @relation(fields: [product_id], references: [id], onDelete: Cascade)
  product_id String
}

model ProductReview {
  id         String   @id @default(uuid())
  rating     Int
  comment    String?
  image      String   @default("")
  author     String   @default("Ẩn danh")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Product    Product  @relation(fields: [product_id], references: [id], onDelete: Cascade)
  product_id String
}

enum Style {
  video
  image_only
  image_left
  image_right
  image_bottom
}

// MARK: ARTICLES
model Topic {
  id       String    @id @default(uuid())
  title    String    @unique
  articles Article[]
}

model Article {
  id          String   @id @default(uuid())
  title       String
  author      String   @default("Ẩn danh")
  banner      String   @default("https://picsum.photos/200")
  description String?
  content     Json?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  Topic       Topic?   @relation(fields: [topic_id], references: [id], onDelete: SetNull)
  topic_id    String?
}

// MARK: AGENCIES
model Agency {
  id       String   @id @default(uuid())
  title    String
  image    String?
  lat      Decimal?
  lng      Decimal?
  location String?
  phone    String?  @unique
  email    String?  @unique

  @@unique([lat, lng])
}
